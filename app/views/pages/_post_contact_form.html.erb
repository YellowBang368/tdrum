<section class="color-light form-index">
  <div class="container">
    <div class="row justify-content-center">
      <h2 class="section-title" style="margin-top: 125px;"><%= I18n.t("form.anyQuestions") %></h2>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form class="main-form">
          <input placeholder="<%= I18n.t("form.name") %>" type="text" />
          <input placeholder="E-mail" type="email" />
          <input style="flex: 1 1 100%; max-width: 100%;" placeholder="<%= I18n.t("form.phone") %>" type="tel" />
          <textarea class="text-area" name="contact_text" placeholder="<%= I18n.t("form.yourQuestion") %>"></textarea>
          <button class="button" type="submit"><%= I18n.t("form.submit") %></button>
        </form>
      </div>
    </div>
  </div>
</section>
